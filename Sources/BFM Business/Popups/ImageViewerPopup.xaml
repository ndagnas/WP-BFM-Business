<controls:UserControl x:Class="NextRadio.Popups.ImageViewerPopup"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows"
		xmlns:systemWindowsPhoneControls="clr-namespace:System.Windows.Phone.Controls"
		FontFamily="Segoe WP" FontSize="18" Foreground="White" mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="768" >

	<Border Margin="-1,0,-1,-1" Background="#FF31353E">
		<Grid Margin="1,0,1,1">
			<systemWindowsPhoneControls:ImageViewer x:Name="ImageViewer" Background="#1F31353E" />
			<Border Height="100" Background="#1F000000" VerticalAlignment="Bottom">
				<TextBlock x:Name="ImageUrl" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" TextWrapping="Wrap" TextTrimming="WordEllipsis" TextAlignment="Center" />
			</Border>
		</Grid>
	</Border>
</controls:UserControl>
